{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "env": [
        "NEXT_PUBLIC_SECRET_FOR_GENERATING_KEY",
        "NEXT_PUBLIC_SECRET_FOR_GENERATING_KEY",
        "NEXT_PUBLIC_RP_ORIGIN",
        "NEXT_PUBLIC_RP_ID",
        "NEXT_PUBLIC_RP_NAME",
        "NEXT_PUBLIC_CLERK_WEBHOOK",
        "NEXT_PUBLIC_SECRET_FOR_GENERATING_KEY_WEB"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    }
  }
}
